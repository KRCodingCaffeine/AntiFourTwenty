<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgReg">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/co_ordinated_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:id="@+id/loan_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="30dp"
            android:fillViewport="true">

            <RelativeLayout
                android:id="@+id/personal_loan_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
             <RelativeLayout
                    android:id="@+id/lay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rect_bg"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"

                    >

                    <TextView
                        android:id="@+id/profile_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white_bg"
                        android:text="@string/profile_font"
                        android:textColor="@color/textFontColor"
                        android:textSize="23sp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        >   </TextView>
                    <View
                        android:id="@+id/secondView"
                        android:layout_toRightOf="@id/profile_logo"
                        android:layout_width="1dp"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="#E6E6E6"
                        android:paddingBottom="17dp"
                        android:paddingTop="17dp"
                        android:visibility="gone"
                        />

                    <EditText
                        android:id="@+id/firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name and Surname"
                        android:textColorHint="@color/hintColor"
                        android:background="#00000000"
                        android:layout_toRightOf="@id/secondView"
                        android:layout_marginLeft="15dp"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginRight="8dp"
                        android:padding="10dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/lay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/lay1"
                    android:background="@drawable/rect_bg"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    >
                    <TextView
                        android:id="@+id/profile_logo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white_bg"
                        android:text="@string/email_font"
                        android:textColor="@color/textFontColor"
                        android:textSize="23sp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        >
                    </TextView>
                    <View
                        android:id="@+id/thirdView"
                        android:layout_toRightOf="@id/profile_logo2"
                        android:layout_width="1dp"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="#E6E6E6"
                        android:paddingBottom="17dp"
                        android:paddingTop="17dp"
                        android:visibility="gone"
                        />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:background="#00000000"
                        android:layout_toRightOf="@id/thirdView"
                        android:layout_marginLeft="15dp"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/hintColor"
                        android:maxLines="1"
                        android:layout_marginRight="8dp"
                        android:padding="10dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lay3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/lay2"
                    android:background="@drawable/rect_bg"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    >
                    <TextView
                        android:id="@+id/profile_logo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white_bg"
                        android:text="@string/mobile_font"
                        android:textColor="@color/textFontColor"
                        android:textSize="23sp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        >   </TextView>
                    <View
                        android:id="@+id/fourView"
                        android:layout_toRightOf="@id/profile_logo3"
                        android:layout_width="1dp"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="#E6E6E6"
                        android:paddingBottom="17dp"
                        android:paddingTop="17dp"
                        android:visibility="gone"
                        />

                    <EditText
                        android:id="@+id/reg_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number"
                        android:background="#00000000"
                        android:layout_toRightOf="@id/fourView"
                        android:layout_marginLeft="15dp"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"
                        android:inputType="number"
                        android:textColorHint="@color/hintColor"
                        android:layout_marginRight="8dp"
                        android:padding="10dp"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>